<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_drawer_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.married.got.just.we.ingom.penji.pengom.main.MainActivity">

    <include
        layout="@layout/layout_app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/view_navigation_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        app:headerLayout="@layout/layout_header_main"
        app:menu="@menu/navigation_view_element" />
</android.support.v4.widget.DrawerLayout>
